<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTheme" parent="Theme.AppCompat" >
        <item name="colorControlHighlight">@color/colorTransparent</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:layout_width">80.0px</item>
        <item name="android:layout_height">40.0px</item>
        <item name="colorControlHighlight">@color/colorTransparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
